<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/main_layout_size"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textSize="50sp" />

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/hiragana_quizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/hiragana" />

            <Button
                android:id="@+id/katakana_quizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/katakana" />

            <Button
                android:id="@+id/kanji_quizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/kanji" />

            <Button
                android:id="@+id/word_quizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/word" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hiragana_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/start_hiragana_to_romaji_quizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/hiragana_romaji_quizz" />

            <Button
                android:id="@+id/start_romaji_to_hiragana_quizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/romaji_hiragana_quizz" />

            <Button
                android:id="@+id/hiragana_selection_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/hiragana_selection" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/katakana_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/start_katakana_to_romaji_quizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/katakana_romaji_quizz" />

            <Button
                android:id="@+id/start_romaji_to_katakana_quizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/romaji_katakana_quizz" />

            <Button
                android:id="@+id/katakana_selection_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/katakana_selection" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/kanji_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/start_kanji_reading_quizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/kanji_reading_quizz" />

            <Button
                android:id="@+id/start_reading_kanji_quizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/reading_kanji_quizz" />

            <Button
                android:id="@+id/start_kanji_meaning_quizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/kanji_meaning_quizz" />

            <Button
                android:id="@+id/start_meaning_kanji_quizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/meaning_kanji_quizz" />

            <Button
                android:id="@+id/start_kanji_composition_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/kanji_composition_test" />

            <Button
                android:id="@+id/start_kanji_drawing_quizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/kanji_drawing_quizz" />

            <Button
                android:id="@+id/kanji_selection_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/kanji_selection" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/word_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/start_word_reading_quizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/word_reading_quizz" />

            <Button
                android:id="@+id/start_reading_word_quizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/reading_word_quizz" />

            <Button
                android:id="@+id/start_word_meaning_quizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/word_meaning_quizz" />

            <Button
                android:id="@+id/start_meaning_word_quizz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/meaning_word_quizz" />

            <Button
                android:id="@+id/word_selection_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/word_selection" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
