<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stats_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/disabled_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/statsUnknown"
        android:textColor="@color/statsTextColor"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/bad_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/statsBad"
        android:textColor="@color/statsTextColor"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/meh_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/statsMeh"
        android:textColor="@color/statsTextColor"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/good_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/statsGood"
        android:textColor="@color/statsTextColor"
        android:textAlignment="center" />
</LinearLayout>
