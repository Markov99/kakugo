<resources>
    <attr name="historyBackground" format="color" />
    <attr name="wrongAnswerBackground" format="color" />
    <attr name="correctAnswerBackground" format="color" />
    <attr name="backgroundSure" format="color" />
    <attr name="backgroundMaybe" format="color" />
    <attr name="backgroundDontKnow" format="color" />
    <attr name="compositionGood" format="color" />
    <attr name="compositionBadSelected" format="color" />
    <attr name="compositionBadNotSelected" format="color" />

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="backgroundSure">#9ccc65</item>
        <item name="backgroundMaybe">#dcedc8</item>
        <item name="backgroundDontKnow">#e0e0e0</item>

        <item name="wrongAnswerBackground">#ffdddd</item>
        <item name="correctAnswerBackground">#deffd3</item>

        <item name="compositionGood">#9ccc65</item>
        <item name="compositionBadSelected">#ef9a9a</item>
        <item name="compositionBadNotSelected">#ffcdd2</item>

        <item name="historyBackground">#dddddd</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="android:windowBackground">@color/darkBackground</item>
        <item name="android:colorBackground">@color/darkBackground</item>
        <item name="colorButtonNormal">#333333</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="backgroundSure">#9ccc65</item>
        <item name="backgroundMaybe">#dcedc8</item>
        <item name="backgroundDontKnow">#e0e0e0</item>

        <item name="wrongAnswerBackground">#350000</item>
        <item name="correctAnswerBackground">#092600</item>

        <item name="compositionGood">#9ccc65</item>
        <item name="compositionBadSelected">#ef9a9a</item>
        <item name="compositionBadNotSelected">#ffcdd2</item>

        <item name="historyBackground">#222222</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>
